 function shuffle()
    {
        for (var i = 0; i < 1000; i++) //for the next 1000 hands, the two cards will be shuffled into random spots in the deck
        {
            var cardPlacement1 = (random(0,52) * deck.length);
            var cardPlacement2 = (random(0,52) * deck.length);
            var spot = deck[cardPlacement1];

            deck[cardPlacement1] = deck[cardPlacement2];
            deck[cardPlacement2] = spot;
        }
    }
